{
    "name": "taskflow/todo-app",
    "description": "Application de gestion de tâches sécurisée",
    "type": "project",
    "require": {
        "php": ">=8.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "TaskFlow\\": "includes/"
        }
    },
    "scripts": {
        "test": "phpunit tests/",
        "security-test": "php tests/SecurityTest.php",
        "task-test": "php tests/TaskTest.php"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}